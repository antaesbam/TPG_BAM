PUT _template/tpg_mobile_tickets_template
{
 "template": "tpg_mobile_tickets*",
 "settings": {
   "number_of_shards": 1
 },
 "mappings": {
   "tpg_sms": {
     "properties": {
       "date": {
         "type": "date",
         "format": "yyyy-MM-dd HH:mm:ss.SSS+SS"
       },
       "phone": {
         "type": "keyword"
       },
       "theme": {
         "type": "keyword"
       },
       "cost": {
         "type": "half_float"
       },
       "currency": {
         "type": "keyword"
       },
       "delivery_status": { 
         "type": "keyword"
       },
       "error_code": {
         "type": "integer"
       },
       "error_reason": {
         "type": "keyword"
       },
       "error_message": {
         "type": "text"
       }
     }
   }
 }
}